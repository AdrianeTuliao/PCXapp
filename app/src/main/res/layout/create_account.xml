<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kuryente_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/oval_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/oval_background"
        android:gravity="center_horizontal|center"
        android:translationY="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/oval_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/oval_background"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_rn"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#313131"
        android:backgroundTint="#C4C4C4"
        android:layout_marginTop="410dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/oval_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oval_background"
        app:layout_constraintWidth_percent="0.8">

        <!-- Username -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#A29B9B"
            app:hintEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#79747E"
            app:hintTextColor="#79747E"
            app:boxCornerRadiusTopStart="13dp"
            app:boxCornerRadiusTopEnd="13dp"
            app:boxCornerRadiusBottomStart="13dp"
            app:boxCornerRadiusBottomEnd="13dp"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#A29B9B"
            app:hintEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#79747E"
            app:hintTextColor="#79747E"
            app:boxCornerRadiusTopStart="13dp"
            app:boxCornerRadiusTopEnd="13dp"
            app:boxCornerRadiusBottomStart="13dp"
            app:boxCornerRadiusBottomEnd="13dp"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactnum_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:inputType="number|phone"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- City -->
        <RelativeLayout
            android:layout_width="329dp"
            android:layout_height="51dp"
            android:layout_marginTop="23dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.8">

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/dropdown_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_dropdown" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:backgroundTint="#313131"
        android:padding="11dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>