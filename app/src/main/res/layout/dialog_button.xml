<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottomsheet_bg">

    <!-- Drag Handle (Optional but cool) -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:background="@drawable/drag_handle_bg" />

    <!-- Product Info: Image + Details -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/rounded_design" />

        <!-- Product Details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#48484B"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/productStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stocks: 0"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="12dp"/>

    <!-- Quantity Selector -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20sp"
            android:backgroundTint="#48484B"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Quantity"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginHorizontal="8dp"
            android:elevation="1dp"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20sp"
            android:backgroundTint="#48484B"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Confirm Purchase Button -->
    <Button
        android:id="@+id/btnConfirmPurchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:textAllCaps="false"
        android:backgroundTint="#48484B"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"/>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:backgroundTint="#242426"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:elevation="2dp"/>
</LinearLayout>
