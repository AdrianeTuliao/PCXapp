<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="0dp"
    android:fitsSystemWindows="true"
    tools:context=".HomeFragment">

    <!-- Scrollable Content Including ViewPager2 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Slideshow using ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="6dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:nestedScrollingEnabled="true"/>

            <!-- Scrollable Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Intel Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/intel"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="6dp"/>

                <!-- AMD Ryzen Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ryzen"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="6dp"/>

                <!-- MSI Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/msi"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="6dp"/>

                <!-- ROG Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rog"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="6dp"/>

                <!-- Lenovo Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lenovo"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="6dp"/>

                <!-- Razer Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/razer"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="13dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
