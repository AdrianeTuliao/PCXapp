<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/myOrdersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <!-- New Password Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#423B3B"
            android:textColorHint="#A29B9B"
            android:textSize="16sp" />

        <!-- Eye Icon to toggle visibility -->
        <ImageView
            android:id="@+id/eyeIconNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:src="@drawable/ic_eye_closed"
            android:contentDescription="Toggle Password Visibility"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Confirm Password Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#423B3B"
            android:textColorHint="#A29B9B"
            android:textSize="16sp"
            android:padding="12dp" />

        <!-- Eye Icon to toggle visibility -->
        <ImageView
            android:id="@+id/eyeIconConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:src="@drawable/ic_eye_closed"
            android:contentDescription="Toggle Password Visibility"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitPasswordChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#313131"
        android:textColor="@android:color/white" />
</LinearLayout>
