<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pcxlogo1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pcxlogo1"
        android:supportsRtl="true"
        android:theme="@style/Theme.PCXLOGIN"
        tools:targetApi="31">

        <!-- MainActivity declaration -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CreateAccount Activity declaration -->
        <activity
            android:name=".CreateAccount"
            android:exported="true">
        </activity>

        <!-- CreateAccountSecond Activity declaration -->
        <activity
            android:name=".CreateAccSecond"
            android:exported="true">
        </activity>

        <!-- HomePage Activity declaration -->
        <activity
            android:name=".HomePage"
            android:exported="true">
        </activity>

        <!-- Processor Activity declaration -->
        <activity
            android:name=".ProcessorActivity"
            android:exported="true">
        </activity>

    </application>

</manifest>
